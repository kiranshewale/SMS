@model CustomerDetailsSearchModel;
@{
    ViewData["Title"] = "Co Dealer List";
    Layout = "_Layout";
    var number = 1;

    <!-- DataTables -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/AdminLTE/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
}

<form asp-controller="CustomerMaster" asp-action="List" method="post">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Manage Co- Dealer</h1>
                </div>
                <!-- /.col -->
                <div class="col-sm-6">
                    <div class="breadcrumb float-sm-right">
                        <a asp-controller="CoDealerMaster" asp-action="Create" class="btn bg-blue">
                            <i class="fas fa-file-import"></i>
                            Create Customer
                        </a>
                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Search</h3>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <label asp-for="SearchByEmail"></label>
                                        </div>
                                        <div class="col-md-7">
                                            <input type="text" class="form-control" asp-for="SearchByEmail" />
                                            <span asp-validation-for="SearchByEmail" class="text-danger"></span>
                                        </div>

                                    </div>
                                    

                                </div>
                                <div class="col-md-6">

                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <label asp-for="SearchByMobileNo"></label>
                                        </div>
                                        <div class="col-md-7">
                                            <input type="text" class="form-control" asp-for="SearchByMobileNo" />
                                            <span asp-validation-for="SearchByMobileNo" class="text-danger"></span>
                                        </div>

                                    </div>
                                    
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-9 offset-md-5">
                                    <button type="submit" class="btn bg-blue"><i class="fas fa-search"></i> Search </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>


            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Co- Dealers List</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Contact No</th>
                                        <th>Address</th>
                                        <th>City</th>
                                        <th>Dealer Code</th>
                                        <th>Action</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.CustomerDetails)
                                    {
                                        <tr>
                                            <td>@number</td>
                                            <td>@item.CustomerName</td>
                                            <td>@item.EmailId</td>
                                            <td>@item.MobileNo1</td>
                                            <td>@item.Address1</td>
                                            <td>@item.District</td>
                                            <td>@item.DealerCode</td>

                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                                            </td>
                                        </tr>
                                        number++;
                                    }
                                </tbody>

                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
    <!-- jQuery -->
    @*<script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>*@
    <!-- Bootstrap 4 -->
    @*<script src="~/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>*@
    <!-- DataTables -->
</form>
<script>
    $(function () {

        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "responsive": true,
            "pageLength": 15,
        });
    });</script>